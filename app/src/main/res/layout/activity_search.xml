<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">



    <android.support.constraint.Guideline
        android:id="@+id/search__guideline__left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/search__guideline__right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9521531" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/search__back"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:background="@drawable/arrow__back__item"
        android:backgroundTint="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/search__title"
        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
        app:layout_constraintTop_toTopOf="@+id/search__title" />


    <TextView
        android:id="@+id/search__title"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/home__btn1"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/test_title"
        app:layout_constraintStart_toEndOf="@+id/search__back"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/search__quit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cross"
        android:backgroundTint="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/search__title"
        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
        app:layout_constraintTop_toTopOf="@+id/search__title" />


    <EditText
        android:id="@+id/search__input"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="Votre recherche"
        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
        app:layout_constraintTop_toBottomOf="@+id/search__title" />

    <Button
        android:id="@+id/search__btn__tag1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_blue_border"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
        app:layout_constraintTop_toBottomOf="@+id/search__input" />

    <Button
        android:id="@+id/search__btn__tag2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_blue_border"
        android:backgroundTint="@android:color/background_light"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
        app:layout_constraintTop_toBottomOf="@+id/search__btn__tag1" />

    <Button
        android:id="@+id/search__btn__tag3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_blue_border"
        android:backgroundTint="@android:color/background_light"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
        app:layout_constraintTop_toBottomOf="@+id/search__btn__tag2" />

    <Button
        android:id="@+id/search__btn__tag4"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_blue_border"
        android:backgroundTint="@android:color/background_light"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/search__input" />

    <Button
        android:id="@+id/search__btn__tag5"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_blue_border"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/search__btn__tag4" />

    <Button
        android:id="@+id/search__btn__tag6"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_blue_border"
        android:backgroundTint="@android:color/background_light"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/search__btn__tag5" />

    <Button
        android:id="@+id/search__btn__search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_blue_border"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:text="@string/critere__item__button"
        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
        app:layout_constraintTop_toBottomOf="@+id/search__btn__tag6" />

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/search__items__list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
            app:layout_constraintTop_toBottomOf="@+id/search__btn__search">

            <LinearLayout
                android:id="@+id/search__items__container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search__btn__tag6">

                <LinearLayout
                    android:id="@+id/search__item1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
                    app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                    tools:layout_editor_absoluteY="953dp">

                    <ImageView
                        android:id="@+id/search__item1__image"
                        android:layout_width="300dp"
                        android:layout_height="280dp"
                        android:layout_marginTop="20dp"
                        android:elevation="2dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/button23"
                        app:srcCompat="@drawable/cover" />

                    <Button
                        android:id="@+id/search__item1__tag1"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_blue_border"
                        android:backgroundTint="@color/home__blue"
                        android:text="@string/cat_1"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        app:layout_constraintBottom_toBottomOf="@+id/button22"
                        app:layout_constraintStart_toEndOf="@+id/button22"
                        app:layout_constraintTop_toTopOf="@+id/button22" />

                    <Button
                        android:id="@+id/search__item1__tag2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_blue_border"
                        android:backgroundTint="@color/home__blue"
                        android:text="@string/cat_1"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/textView29" />

                    <TextView
                        android:id="@+id/search__item1__title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/critere__item__title"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/test_title"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

                    <TextView
                        android:id="@+id/search__item1__description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:lineSpacingExtra="@dimen/default_gap"
                        android:text="@string/critere__item__description"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="@dimen/text_p"
                        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/button21" />

                    <Button
                        android:id="@+id/search__item1__discover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/rounded_blue_border"
                        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                        android:text="@string/home__welcome"
                        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/textView30" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/search__item2"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/greyLisght"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
                    app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                    tools:layout_editor_absoluteY="953dp">

                    <ImageView
                        android:id="@+id/search__item2__image"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_marginTop="20dp"
                        android:elevation="2dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/button23"
                        app:srcCompat="@drawable/cover" />

                    <Button
                        android:id="@+id/search__item2__tag1"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_blue_border"
                        android:backgroundTint="@color/home__blue"
                        android:text="@string/cat_1"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        app:layout_constraintBottom_toBottomOf="@+id/button22"
                        app:layout_constraintStart_toEndOf="@+id/button22"
                        app:layout_constraintTop_toTopOf="@+id/button22" />

                    <Button
                        android:id="@+id/search__item2__tag2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_blue_border"
                        android:backgroundTint="@color/home__blue"
                        android:text="@string/cat_1"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/textView29" />

                    <TextView
                        android:id="@+id/search__item2__title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/critere__item__title"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/test_title"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

                    <TextView
                        android:id="@+id/search__item2__description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:lineSpacingExtra="@dimen/default_gap"
                        android:text="@string/critere__item__description"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="@dimen/text_p"
                        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/button21" />

                    <Button
                        android:id="@+id/search__item2__discover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/rounded_blue_border"
                        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                        android:text="@string/home__welcome"
                        app:layout_constraintEnd_toStartOf="@+id/search__guideline__right"
                        app:layout_constraintStart_toStartOf="@+id/search__guideline__left"
                        app:layout_constraintTop_toBottomOf="@+id/textView30" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>
    </android.support.constraint.ConstraintLayout>
</ScrollView>